<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Download">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:background="#1684f2"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="50dp">
        <TextView android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Download Documents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doc1"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/head"
        android:layout_width="match_parent"

        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="60dp">
        <TextView
            android:textColor="#1684f2"
            android:padding="10dp"
            android:layout_gravity="center|left"

            android:textSize="18sp"
            android:text="SuperShip Proposal Form 2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btn1"
                android:layout_gravity="end|center"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:background="#fff"
                android:src="@drawable/download"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doc2"

        android:layout_below="@+id/doc1"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            android:id="@+id/card2"
            app:cardElevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:textColor="#1684f2"
                android:layout_gravity="center|start"
                android:padding="10dp"

                android:textSize="18sp"
                android:text="Health Insurance Claim Form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btn2"
                android:layout_gravity="right|center"
                android:onClick="download2"
                android:layout_marginRight="10dp"
                android:background="#fff"
                android:layout_width="wrap_content"
                android:src="@drawable/download"
                android:layout_height="wrap_content" />


        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>